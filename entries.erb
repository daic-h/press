<% @posts.each do |post| %>
<div class="article section">
  <div class="header">
    <h2 class="title"><a href="<%= post.link %>"><%= post.title %></a></h2>
  </div>
  <div class="body">
    <%= post.body %>
  </div>
  <div class="footer">
    <%= tweet_button("http://a-newcomer.heroku.com/#{post.id}") %>
    <%= hatena_bookmark_button(post.title, "http://a-newcomer.heroku.com/#{post.id}") %>
    <div class="created_at"><%= l post.created_at.to_time %></div>
    <span class="link_to_entry_comment">
      <%= link_to "#{t.comments}(#{post.comments.size})", "#{post.link}#comment_wrapper" %>
    </span>
    <%= post.tags_to_html %>
  </div>
</div>
<% end %>
<div class="pager">
  <ul>
<% if @posts.pager.previous_page %>
    <li class="previous"><a href="?page=<%= @posts.pager.previous_page %>"><%= t.newer %></a></li>
<% end %>
<% if @posts.pager.next_page %>
    <li class="next"><a href="?page=<%= @posts.pager.next_page %>"><%= t.older %></a></li>
<% end %>
  </ul>
</div>
