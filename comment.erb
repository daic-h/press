<% if entry.comments.size > 0 %>
    <header>
        <h1 class="comment-title"><%= t.comments %></h1>
    </header>
    <ul id="comments">
        <% entry.comments.reverse.map.with_index(1) do |comment, i| %>
        <li id="comment-<%= comment.id %>" class="comment">
            <div class="body">
                <%= hbr comment.body %>
            </div>
            <footer>
                <span class="name">
                    <%= link_to_unless comment.homepage.blank?, comment.name, comment.homepage %>
                </span>
                <span class="date">
                    <%= l comment.created_at.to_time %>
                </span>
            </footer>
        </li>
        <% if entry.comments.size > i %>
        <hr>
        <% end %>
        <% end %>
    </ul>
<% end %>
<div class="comment-form">
    <%= comment_form %>
</div>
