<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta content="text/css" http-equiv="Content-Style-Type" />
    <meta content="text/javascript" http-equiv="Content-Script-Type" />
<% if entry? %>
    <title><%= @entry.title %> - <%= @site.title %></title>
<% else %>
    <title><%= @site.title %></title>
<% end %>
    <meta name="description" content="<%= @site.meta_description %>" />
    <meta name="keywords" content="<%= @site.meta_keywords %>" />
    <link rel="shortcut icon" href="<%= @theme.path %>/favicon.ico" />
    <link rel="alternate" href="/index.atom" type="application/atom+xml" />
    <link rel="stylesheet" href="<%= @theme.path %>/style.css" type="text/css" />
    <%= header %>
  </head>
  <body class="<%= @theme_types.join(' ') %>">
    <div id="header">
      <h1 class="wide"><a href="/"><%= @site.title %></a></h1>
      <div class="section">
        <div class="nav">
          <ul class="wide">
            <% Page.all.each do |page| %>
              <li><a href="<%= page.link %>"><%= page.title %></a></li>
            <% end %>
              <li><a href="https://twitter.com/#!/Daic_h" target="_blank">Twitter</a></li>
              <li><a href="http://www.facebook.com/profile.php?id=100001583750350" target="_blank">Facebook</a></li>
              <li><a href="https://github.com/daic-h" target="_blank">Github</a></li>
              <li><a href="http://about.me/daic_h" target="_blank">About.me</a></li>
          </ul>
        </div>
      </div>
      <div class="bread_crumbs wide"><%= bread_crumb %></div>
    </div>
    <div id="container">
      <div id="main">
        <%= yield %>
      </div>
      <div id="aside">
        <dl>
          <dt><%= t.calendar %></dt>
          <dd>
          <ul>
            <%= calendar %>
          </ul>
          </dd>
          <dt><%= t.recent_entries %></dt>
          <dd>
          <ul>
            <% Post.recent(5).each do |post| %>
              <li><%= link_to post.title, post.link %></li>
            <% end %>
          </ul>
          </dd>
          <dt><%= t.tags %></dt>
          <dd>
          <ul>
            <% Tag.all.each do |tag| %>
              <li><%= link_to tag.name, tag.link %></li>
            <% end %>
          </ul>
          </dd>
          <dt>Twitter</dt>
          <dd>
          <script src="http://widgets.twimg.com/j/2/widget.js"></script>
          <script>
            new TWTR.Widget({
              version: 2,
              type: 'profile',
              rpp: 6,
              interval: 6000,
              width: 'auto',
              height: 'auto',
              theme: {
                shell: {
                  background: '#506498',
                  color: '#ffffff'
                },
                tweets: {
                  background: '#506498',
                  color: '#ffffff',
                  links: '#538bed'
                }
              },
              features: {
                scrollbar: false,
                loop: false,
                live: false,
                hashtags: true,
                timestamp: true,
                avatars: false,
                behavior: 'all'
              }
            }).render().setUser('Daic_h').start();
          </script>
          </dd>
        </dl>
      </div>
    </div>
    <div id="footer">
      <div class="copy"><a href="/"><%= @site.title %></a></div>
      <div class="poweredby wide">powered by <a href="http://lokka.org/">Lokka</a></div>
    </div>
    <%= footer %>
  </body>
</html>
