<% require File.join(@theme.path, 'helper', 'press_helper') %>
<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="utf-8">
        <title><%= @entry && @entry.title  + " - " %><%= @site.title %></title>
        <meta name="description" content="<%= @site.meta_description %>">
        <meta name="keywords" content="<%= @site.meta_keywords %>">
        <link rel="shortcut icon" href="<%= @theme.path %>/favicon.ico">
        <link rel="alternate" href="/index.atom" type="application/atom+xml">
        <link rel="stylesheet" href="<%= @theme.path %>/assets/stylesheets/style.css" >
        <link href='http://fonts.googleapis.com/css?family=Quicksand:300,400,700' rel='stylesheet' type='text/css'>
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
        <script type="text/javascript" src="<%= @theme.path %>/assets/javascripts/script.js"></script>
        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <%= header %>
    </head>
    <body>
        <!-- Header
        ================================================== -->
        <header id="header-top">
            <h1 id="header-title" class="clearfix"><a href="/"><%= @site.title %></a></h1>
            <h2 id="header-description"><%= @site.description %></h2>
        </header>
        <!-- Container
        ================================================== -->
        <div id="container" class="clearfix">
            <!-- Right Side
            ================================================== -->
            <div id="aside" class="clearfix">
              <% if about = Snippet("about") %>
                <section class="side-nav">
                    <h1>About Me</h1>
                    <%= about.body %>
                    <ul class="social-icon clearfix">
                      <% [:rss,:twitter,:facebook,:github,:aboutme].each do |service| %>
                        <li>
                            <%= social_image_tag service %>
                            <span><%= service.capitalize %></span>
                        </li>
                      <% end %>
                    </ul>
                </section>
              <% end %>
                <nav class="side-nav">
                    <dt>Recent Entries</dt>
                    <dd>
                        <ul>
                          <% Post.recent(5).each do |post| %>
                            <li><%= link_to post.title, post.link %></li>
                          <% end %>
                        </ul>
                    </dd>
                </nav>
                <nav class="side-nav">
                    <dt>Tags</dt>
                    <dd>
                        <ul>
                          <% Tag.all.each do |tag| %>
                            <li><%= link_to tag.name, tag.link %></li>
                          <% end %>
                        </ul>
                    </dd>
                </nav>
                <nav class="side-nav archives">
                    <h1>Archives</h1>
                    <ul>
                      <% months.each do |m| %>
                        <li><%= link_to "#{m.year}年#{m.month}月", "/#{m.year}/#{m.month}/" %></li>
                      <% end %>
                    </ul>
                </nav>
                <nav class="side-nav">
                    <h1>Search</h1>
                    <form action="/search/" method="get" id="">
                        <input type="text" name="query" placeholder="I'm looking for...">
                        <input class="button" type="submit" value="検索">
                    </form>
                </nav>
                <nav class="side-nav">
                    <dt>Twitter</dt>
                    <dd><%= press_twitter_widget %></dd>
                </nav>
                <nav class="ad-nav">
                    <ul>
                        <% if logged_in? %>
                        <li>
                            <%= link_to t.admin_page, '/admin/' %>｜
                        </li>
                        <li>
                            <%= link_to t.new_post, '/admin/posts/new' %>｜
                        </li>
                        <li>
                            <%= link_to t.logout, '/admin/logout' %>
                        </li>
                        <% end %>
                    </ul>
                </nav>
            </div><!-- END Aside -->
            <!-- Contents
            ================================================== -->
            <section class="bread-crumb">
                <%= press_bread_crumb %>
            </section>
            <div id="contents" class="clearfix">
                <%= yield %>
            </div><!-- END Contents -->
        </div><!-- END Container -->
        <!-- Footer
        ================================================== -->
        <footer id="footer">
            <p id="copy">Copyright &copy; 2011 <%= @site.title %>. All Rights Reserved.</p>
            <p id="powerd">Powered by <a href="http://lokka.org/">Lokka</a></p>
        </footer>
        <%= footer %>
    </body>
</html>
